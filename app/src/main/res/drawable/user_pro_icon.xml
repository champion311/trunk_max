<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_selected="true">
        <layer-list>
            <item>
                <shape android:innerRadius="7dp" android:shape="ring" android:thickness="0.1dp" android:useLevel="false">
                    <solid android:color="@color/button_bg_color" />

                    <size android:width="16dp" android:height="16dp" />
                </shape>
            </item>

            <item android:gravity="center">
                <shape android:shape="oval">
                    <solid android:color="@color/button_bg_color" />

                    <size android:width="10dp" android:height="10dp" />
                </shape>
            </item>


        </layer-list>
    </item>

    <item android:state_checked="false" android:state_selected="false">

        <shape android:innerRadius="7dp" android:shape="ring" android:thickness="0.1dp" android:useLevel="false">
            <solid android:color="@color/button_bg_color" />

            <size android:width="16dp" android:height="16dp" />
        </shape>
    </item>


</selector>
