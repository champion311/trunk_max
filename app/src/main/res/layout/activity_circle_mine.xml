<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_top_wrapper"
        android:layout_width="match_parent"
        android:layout_height="240dp">


        <RelativeLayout
            android:id="@+id/rl_top_wrapper"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_gravity="top"
            android:background="@color/seleted_text_color">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_arrow_back"

                />

            <com.shosen.max.widget.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp"
                android:src="@drawable/display_avater" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_avatar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="2333"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shadow_mine">


            <TextView
                android:id="@+id/tv_focus_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp"
                android:text="10"
                android:textColor="@color/black_text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_focus_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_focus_count"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="关注"
                android:textColor="@color/hint_color"
                android:textSize="15sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_focus_count"
                android:layout_alignBottom="@id/tv_focus_text"
                android:layout_marginRight="45dp"
                android:layout_toLeftOf="@id/tv_focus_text"
                android:background="@drawable/separ_line" />


            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_focus_count"
                android:layout_alignBottom="@id/tv_focus_text"
                android:layout_marginLeft="45dp"
                android:layout_toRightOf="@id/tv_focus_text"
                android:background="@drawable/separ_line" />

            <TextView
                android:id="@+id/tv_topic_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_focus_count"
                android:layout_alignBottom="@id/tv_focus_count"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="45dp"
                android:text="10"
                android:textColor="@color/black_text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_topic_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_focus_text"
                android:layout_alignBottom="@id/tv_focus_text"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="43dp"
                android:text="话题"
                android:textColor="@color/hint_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_fans_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_focus_count"
                android:layout_alignBottom="@id/tv_focus_count"
                android:layout_alignParentRight="true"
                android:layout_marginRight="56dp"
                android:text="10"
                android:textColor="@color/black_text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_fans_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_focus_text"
                android:layout_alignBottom="@id/tv_focus_text"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:text="粉丝"
                android:textColor="@color/hint_color"
                android:textSize="15sp" />


        </RelativeLayout>

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_my_message"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_my_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="我的消息"
            android:textColor="@color/black_text_color"
            android:textSize="16sp"

            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_my_message"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/right_arrow" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/diver_color" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="59dp">

        <TextView
            android:id="@+id/tv_my_sc_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="我的私信"
            android:textColor="@color/black_text_color"
            android:textSize="16sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_my_sc_message"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/right_arrow" />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/diver_color" />


</LinearLayout>