            <!--app:radius="5dp" />-->


            <com.shosen.max.widget.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:src="@drawable/default_avater" />
            <!--app:civ_border_width="1dp"-->
            <!--app:civ_border_color="@color/seleted_text_color"-->
            <!--app:civ_border_overlay="true"-->

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_avatar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:text="恐高的鸟"
                android:textColor="@color/black_text_color"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_alignParentBottom="true"
                android:scaleType="fitXY"
                android:src="@drawable/bottom_background" />

            <TextView
                android:id="@+id/tv_my_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_user_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:text="个性签名"
                android:textColor="@color/c666"
                android:textSize="15sp" />

        </RelativeLayout>


    </FrameLayout>

