<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="98dp"
    android:background="@color/white">

    <com.shosen.max.widget.CircleImageView
        android:id="@+id/iv_message_avater"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:src="@drawable/default_avater"

        />

    <ImageView
        android:id="@+id/iv_image_content"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="19dp"
        android:scaleType="centerCrop"
        android:src="@drawable/home_image" />


    <TextView
        android:id="@+id/tv_message_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/iv_message_avater"
        android:text="酷酷的滕"
        android:textColor="@color/c666"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/tv_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_message_name"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@id/iv_image_content"
        android:layout_toRightOf="@id/iv_message_avater"
        android:maxLength="1"
        android:text="这车什么时候预订?"
        android:textColor="@color/black_text_color"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_addpriase_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_message_name"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/iv_message_avater"
        android:src="@drawable/priase_icon_selected" />


    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_message_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/iv_message_avater"
        android:text="09:58"
        android:textColor="@color/c999"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/tv_text_content"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:textColor="@color/c999"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/diver_color" />

</RelativeLayout>